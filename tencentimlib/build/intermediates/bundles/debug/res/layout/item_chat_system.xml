<?xml version="1.0" encoding="utf-8"?><!--IM聊天室-小希管家的消息-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_15"
    android:layout_marginRight="@dimen/space_15"
    android:layout_marginTop="@dimen/space_10"
    android:background="@drawable/im_bg_system"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginTop="@dimen/space_15"
        android:text=""
        android:textColor="#3D464D"
        android:textSize="@dimen/text_size_18" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_15"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginTop="@dimen/space_11">

        <LinearLayout
            android:id="@+id/civ_header_img"
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:background="@drawable/im_head_steward"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_head_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="2"
                android:text="小希"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_6" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_13"
            android:layout_toRightOf="@+id/civ_header_img"
            android:text="小希留学管家"
            android:textColor="#CCCCCC"
            android:textSize="@dimen/text_size_12" />

    </RelativeLayout>

</LinearLayout>